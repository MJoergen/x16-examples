100 PRINT CHR$(147)
110 FOR X=0 TO 79
120 VPOKE 0, 30*256+X*2+1, 1*16
130 NEXT
140 FOR Y=0 TO 59
150 VPOKE 0, Y*256+40*2+1, 1*16
160 NEXT
200 NX=INT(RND(0)*80)
210 NY=INT(RND(0)*60)
220 IF VPEEK(0, NY*256+NX*2+1)=1*16 THEN GOTO 200
230 X=0
240 Y=0
300 VPOKE 0, NY*256+NX*2+1, 7*16
310 VPOKE 0, Y*256+X*2+1, 6*16
320 X=NX
330 Y=NY
340 IF X>0  THEN IF VPEEK(0, Y*256+(X-1)*2+1)=1*16 THEN GOTO 600
350 IF X<79 THEN IF VPEEK(0, Y*256+(X+1)*2+1)=1*16 THEN GOTO 600
360 IF Y>0  THEN IF VPEEK(0, (Y-1)*256+X*2+1)=1*16 THEN GOTO 600
370 IF Y<59 THEN IF VPEEK(0, (Y+1)*256+X*2+1)=1*16 THEN GOTO 600
500 D=INT(RND(0)*2)*2 + INT(RND(0)*2)
510 IF D=0 THEN NX=X+1
520 IF D=1 THEN NX=X-1
530 IF D=2 THEN NY=Y+1
540 IF D=3 THEN NY=Y-1
550 IF NX<0 OR NX>=80 OR NY<0 OR NY>=60 THEN GOTO 500
560 GOTO 300
600 VPOKE 0, Y*256+X*2+1, 1*16
610 GOTO 200
